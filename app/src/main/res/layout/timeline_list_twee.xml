<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvHandles"
            android:layout_width="164dp"
            android:layout_height="19dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="68dp"
            tools:text="yasminM July 10,2022"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvtweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="104dp"
            android:text="Software Developer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvHandles" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="98dp"
            android:layout_height="87dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/tvcomments"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/tvHandles"
            app:layout_constraintTop_toBottomOf="@+id/tvtweet"
            app:srcCompat="@drawable/comment" />

        <ImageView
            android:id="@+id/imgRetweet"
            android:layout_width="45dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toStartOf="@+id/tvRetweet"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvcomments"
            app:layout_constraintTop_toBottomOf="@+id/tvtweet"
            app:srcCompat="@drawable/retweet" />

        <TextView
            android:id="@+id/tvcomments"
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:text="24"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgComment"
            app:layout_constraintEnd_toStartOf="@+id/imgRetweet"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgComment"
            app:layout_constraintTop_toTopOf="@+id/imgComment"
            app:layout_constraintVertical_bias="0.833" />

        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="45dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/tvLike"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvRetweet"
            app:layout_constraintTop_toBottomOf="@+id/tvtweet"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="45dp"
            android:layout_height="41dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgLike"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgLike"
            app:srcCompat="@drawable/share" />

        <TextView
            android:id="@+id/tvRetweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="10"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgRetweet"
            app:layout_constraintEnd_toStartOf="@+id/imgLike"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgRetweet"
            app:layout_constraintTop_toTopOf="@+id/imgRetweet"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="34"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgLike"
            app:layout_constraintEnd_toStartOf="@+id/imgShare"
            app:layout_constraintStart_toEndOf="@+id/imgLike"
            app:layout_constraintTop_toTopOf="@+id/imgLike"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>